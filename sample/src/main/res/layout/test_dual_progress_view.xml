<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp">

    <com.pollux.widget.DualProgressView
        android:id="@+id/progress1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        app:dpv_inner_color="@color/colorPrimaryDark"
        app:dpv_inner_padding="8dp"
        app:dpv_outer_color="@color/colorAccent"
        app:dpv_thickness="2dp" />

    <com.pollux.widget.DualProgressView
        android:id="@+id/progress2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:dpv_inner_color="@color/color_inner1"
        app:dpv_outer_color="@color/color_outer1" />

    <com.pollux.widget.DualProgressView
        android:id="@+id/progress3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/progress1"
        app:dpv_inner_color="@color/color_inner2"
        app:dpv_outer_color="@color/color_outer2" />

</RelativeLayout>

